<%= render 'layouts/errors', object: @lesson %>

<%= form_for [@lesson], :html => { :class => "form-horizontal" } do |f| %>

  <div class="form-group">
    <%= f.label :name, {class: "col-md-2"} %>
    <%= f.text_field :name, {class: "col-md-8"} %>
  </div>

  <div class="form-group">
    <%= f.label :content, {class: "col-md-2"}  %>
    <%= f.text_area :content, {class: "col-md-8"} %>
  </div>

  <%= f.submit class: "col-md-offset-2" %>
<% end %>
