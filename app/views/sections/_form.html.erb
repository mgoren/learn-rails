<%= render 'layouts/errors', object: @section %>

<%= form_for [@section], :html => { :class => "form-horizontal" } do |f| %>

  <div class="form-group">
    <%= f.label :name, {class: "col-md-2"} %>
    <%= f.text_field :name, {class: "col-md-8"} %>
  </div>

  <div class="form-group">
    <%= f.collection_select :chapter_id, @chapters, :id, :name, prompt: true %>
  </div>

  <%= f.submit class: "col-md-offset-2" %>
<% end %>
